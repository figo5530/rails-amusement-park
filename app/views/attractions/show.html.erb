<p><strong>Name:</strong> <%= @a.name %></p>
<p><strong>Total Number of Users:</strong> <%= @a.users.count %></p>
<p><strong>Ticket Requirement:</strong> <%= @a.tickets %></p>
<p><strong>Height Requirement:</strong> <%= @a.min_height %> inches</p>
<p><strong>Nausea Rating:</strong> <%= @a.nausea_rating %></p>
<p><strong>Happiness Rating:</strong> <%= @a.happiness_rating %></p>
<% if @user.admin %>
    <%= link_to 'Edit Attraction', edit_attraction_path(@a) %>
<% else %>
    <%= form_for(@ride) do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :attraction_id %>
        <%= f.submit 'Go on this ride' %>
    <% end %>
<% end %>
